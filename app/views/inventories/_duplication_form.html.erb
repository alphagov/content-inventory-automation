<%= form_for @inventory, url: {action: "create"}, html: {class: "nifty_form"} do |f| %>
  <div class="col-md-6">
    <div class="form-group">
      <label>Name</label>
      <%= f.text_field :name, class: 'input-md-6 form-control', placeholder: 'Enter spreadheet name' %>
    </div>
    <%= f.submit "Create", class: 'btn-success' %>
  </div>
  
<% end %>
